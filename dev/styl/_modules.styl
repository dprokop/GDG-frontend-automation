.module
    display block
    background bg-module
    width 100%
    margin-top 20%
    position relative
    box-shadow 0px 0px 20px rgba(0,0,0,.3)
    border-radius 2px
    &:before
        content ''
        position absolute
        width 100%
        height 100%
        box-shadow 0px 0px 1000px rgba(255,255,255, .25)
        top 0
        left 0
        z-index -1

    .profile-pic
        display block
        position absolute
        top -25px
        left 50%
        margin-left -43px
        width 86px
        height 86px
        overflow hidden
        border-radius 50%
        border 3px solid white
        box-shadow 0 0 4px rgba(0,0,0,.25)
        img
            display block
            height 105%
            max-width 105%

    .content
        text-align center
        padding 100px 40px 60px 40px

        small
            color #cea896
            position relative

            &:after
                content ''
                display block
                width 20px
                height 2px
                background lighten(#cea896, 70%)
                position absolute
                left 50%
                bottom -8px
                margin-left -10px
        h1
            margin-top 25px

        .interests
            text-transform uppercase
            color #cea896
            font-size 11px
            text-align center



    footer
        padding 20px 40px
        border-top 1px dotted #ccc
        background rgba(0,0,0, .02)
        font-family Lato
        font-weight 900
        text-transform uppercase
        letter-spacing .1em
        text-align left
        font-size 13px


